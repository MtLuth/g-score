{
  "version": 2,
  "builds": [
    {
      "src": "server/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["server/**/*.ts"],
        "ignore": ["node_modules/**"]
      }
    }
  ],
  "hooks": {
    "build": {
      "pre": "npm install",
      "post": "npm run build"
    }
  }
}
